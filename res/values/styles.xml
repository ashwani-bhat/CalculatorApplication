<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buttonStyle">
    <item name="android:textColor">#fff</item>
    <item name="android:textSize">15sp</item>
    <item name="android:background">#777</item>
    <item name="android:layout_margin">3dp</item>
    <item name="android:layout_width">80dp</item>
    <item name="android:layout_height">50dp</item>
    </style>

    <style name="buttonStyle1">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#004080</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="buttonStyle2">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#999</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <style name="indexButtonStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">#00b366</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="backgroundColor">
        <item name="android:background">#99ff99</item>
    </style>

    <style name="backgroundColor1">
        <item name="android:background">#ccffcc</item>
    </style>

</resources>
